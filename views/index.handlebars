<div class="container">

    <div class="jumbotron text-center">
        <h1><i class="fa fa-facebook-square" aria-hidden="true"></i> Burger Time!</h1>
        <hr>
        <h2>Enter a burger and eat it</h2>
        <br>

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-3 text-center">
                <h2>Burgers to be eaten!</h2>
                <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block}}
                    {{/unless}}
                {{/each}}
                </ul>
            </div>
            <div class="col-md-3 text-center">
                <h2>Devoured Burgers!</h2>
                <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block}}
                    {{/if}}
                {{/each}}
                </ul>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                {{!-- form for inputting burgers --}}
                <form class="create-form">
                    <div class="form-group">
                        <label for="ca"></label>
                        <input type="text" id="ca" name="name" placeholder="Burger Name">
                    </div>

                    <button type="submit">Add Burger</button>
                </form>

            </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>